.videoScroll .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

.videoScroll .content {
  font-size: 26rpx;
  height: 70rpx;
  line-height: 70rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-bottom: 1rpx solid #eee;
  /* padding: 10rpx 0; */
  padding-top: 10rpx;
  padding-bottom: 25rpx;
}

.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  margin-right: 20rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: 10rpx;
  padding: 0 6rpx;
  font-size: 20rpx;
}