/* pages/video/video.wxss */
/* 头部区域 */
.videoContainer .header {
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
}

.header image {
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx 20rpx;
}

.videoContainer .header .search {
  border: 1rpx solid #eee;
  flex: 1;
  text-align: center;
  margin: 10rpx 0;
  font-size: 26rpx;
  color: #d43c33;
}

/* 导航区域 */
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 70rpx;
}

.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
}

.navItem .active {
  border-bottom: 2rpx solid #d43c33;
}

/* 视频列表样式 */
.videoListContainer {
  width: 100%;
  height: calc(100vh - 152rpx);
  padding: 0 3%;
  box-sizing: border-box;
  margin-top: 10rpx ;
}

.videoScroll {
  width: 100%;
  margin-top: 10rpx;
}

